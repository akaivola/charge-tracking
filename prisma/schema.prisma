datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    BigInt @id @default(autoincrement())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password    Password?
  notes       Note[]
  ChargeEvent ChargeEvent[]
}

model Password {
  hash   String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId BigInt @unique
}

model Note {
  id    String @id @default(cuid())
  title String
  body  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId BigInt
}

model Provider {
  name        String        @unique
  ChargeEvent ChargeEvent[]
}

model ChargeEvent {
  id            BigInt   @id @default(autoincrement())
  date          DateTime @default(now()) @db.Date
  kiloWattHours Decimal  @default(0.00) @db.Decimal(6, 2)

  pricePerKiloWattHour Decimal @default(0.00) @db.Decimal(6, 2)
  provider             String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  providerFK Provider @relation(fields: [provider], references: [name], onDelete: NoAction, onUpdate: Cascade)
  userId     BigInt
}
